{% extends "admin/admin.html.twig" %}

{% block title "Recette : " ~ recipe.title %}
    
{% block body %}
    <h1>{{ recipe.title }}</h1>

    <p>{{ recipe.content | nl2br }}</p>

    <a href="{{ path('admin.recipe.edit', {id: recipe.id}) }}" class="btn btn-warning">Modifier la recette</a>
{% endblock body %}