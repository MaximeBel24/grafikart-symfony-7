{% extends "base.html.twig" %}

{% block title "Toutes les recettes" %}

{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr>
                <td>
                    {{ recipe.title }}
                </td>
                <td>
                    <div class="d-flex gap-1">
                        <a href="{{ path('recipe.show', {id: recipe.id, slug: recipe.slug}) }}" class="btn btn-info btn-sm">Voir</a>
                        <a href="{{ path('recipe.edit', {id: recipe.id}) }}" class="btn btn-warning btn-sm">Editer</a>
                        <form action="{{ path('recipe.delete', {id: recipe.id}) }}" method="post">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                        </form> 
                    </div>                                       
                </td>
            </tr> 
        {% endfor %}        
    </table>
        </tbody>

    <a href="{{ path('recipe.create') }}" class="btn btn-primary">Cr√©er une recette</a>
{% endblock body %}