{% extends "base.html.twig" %}

{% block title "Toutes les recettes" %}

{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr>
                <td>
                    <a href="{{ path('recipe.show', {id: recipe.id, slug: recipe.slug}) }}">{{ recipe.title }}</a>
                </td>
                <td>
                     <a href="{{ path('recipe.edit', {id: recipe.id}) }}" class="btn btn-primary">Editer</a>
                </td>
            </tr> 
        {% endfor %}        
    </table>
        </tbody>

    <a href="{{ path('recipe.create') }}" class="btn btn-primary">Ajouter une recette</a>
{% endblock body %}